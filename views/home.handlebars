{{!-- Jumbotron Fluid --}}
<div class="jumbotron">
    <div class="container text-center">
        <h1 class="display-4">Rotten Tomatoes Scraper</h1>
        <p class="lead">Scrape articles from Rotten Tomatoes, save your favorites then make notes on the Favorites Page.</p>
        {{!-- Button Row --}}
        <div class="row justify-content-center" id="btn-row">
            <div class="col-6 text-center d-flex justify-content-around" id="btn-col">
                <button type="button" class="scrapeBtn btn btn-lg btn-light">Scrape Articles</button>
                <button type="button" class="clearBtn btn btn-lg btn-light">Clear Articles</button>
            </div>
        </div>
    </div>
</div>

{{!-- Main Body  --}}
<div class="container-fluid main-cont">
    {{!-- Articles/Notes Section --}}
    <div class="row article-row">
        <div class="col-lg-12 articles articleContainer">
            {{#each article}}
            <div class="card article-card" data-_id="{{ this._id }}" data-fav="{{ this.favorite }}">
                <img class="card-img-top" src="{{ this.image }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ this.title }}</h5>
                    <p class="card-text">{{ this.publication }}</p>
                    <button href="{{ this.link }}" class="btn btn-sm btn-outline-secondary"> Read on RT </button>
                    <button href="#" class="btn btn-sm btn-outline-secondary favBtn">
                        <span data-_id={{this._id}} class="heartIcon heart-{{ this.favorite }}">
                            <i class="fas fa-heart"></i>
                        </span>
                    </button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="/assets/js/home.js"></script>