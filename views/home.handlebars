{{!-- Jumbotron Fluid --}}
<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1 class="display-4"> Rotten Tomatoes Scraper</h1>
        <p class="lead">Scrape articles from Rotten Tomatoes, save your favorite and make notes!</p>
    </div>
</div>

{{!-- Main Body  --}}
<div class="container-fluid" id="main-cont">

    {{!-- Button Row --}}
    <div class="row justify-content-center" id="btn-row">
        <div class="col-6 text-center" id="btn-col">
            <button type="button"  class="scrapeBtn btn btn-lg btn-primary">Scrape Articles</button>
            <button type="button" class="clearBtn btn btn-lg btn-primary">Clear Articles</button>
        </div>
    </div>

    {{!-- Articles/Notes Section --}}
    <div class="row" id="article-row">
        <div class="col-lg-12 articles" id="articleContainer">
            {{#each article}}
            <div class="card article-card" data-_id="{{ this._id }}">
                <img class="card-img-top" src="{{ this.image }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ this.title }}</h5>
                    <p class="card-text">{{ this.publication }}</p>
                    <a href="{{ this.link }}" class="btn btn-sm btn-outline-secondary">Read on RT</a>
                    <a data-title="{{ this.title }}"
                        class="btn btn-sm btn-outline-secondary noteBtn" data-toggle="modal"
                        data-target=".bd-note-modal-lg">Add a Note</a>
                    <a href="#"class="btn btn-sm btn-outline-secondary favBtn">
                        <span data-_id={{this._id}} class="heartIcon heart-{{ this.favorite }}">
                            <i class="fas fa-heart"></i>
                        </span>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    {{!-- New Note Modal --}}
    <div class="modal fade bd-note-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="row justify-content-center" id="note-row">
                    <div id="note-col" class="col-9">
                        <div class="modal-body">
                            <h2 id="note-heading"></h2>
                            <form id="add-note-form">
                                <div class="form-group">
                                    <label for="note-text-area">Write your Note Here...</label>
                                    <textarea class="form-control" id="note-text-area" rows="5"></textarea>
                                </div>
                                <button id="submitNoteBtn" type="button" class="btn btn-primary">Add Note</button>
                            </form>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
